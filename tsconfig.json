{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@actions/*": ["actions/*"],
      "@icons/*": ["common/icons/*"],
      "@styles/*": ["common/styles/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@modals/*": ["modals/*"],
      "@pages/*": ["pages/*"],
      "@selectors/*": ["selectors/*"],
      "@reducers/*": ["reducers/*"],
      "@store/*": ["store/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
